<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProfileBook.Views.AddEditProfileView">

    <NavigationPage.TitleView>
        <Label Text="Add Profile" TextColor="White" FontSize="Medium" />
    </NavigationPage.TitleView>

    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="save_icon.png" Command="{Binding SaveCommand}"/>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <StackLayout Background="White">
            <ffimageloading:CachedImage
                HorizontalOptions="Center"
                VerticalOptions="Center"
                HeightRequest="200"
                WidthRequest="200"
                Margin="0,50,0,0"  
                LoadingPlaceholder="user_person.png"
                Source="{Binding ProfileImage}">
                
                <ffimageloading:CachedImage.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ProfileImageClickCommand}"/>
                </ffimageloading:CachedImage.GestureRecognizers>

            </ffimageloading:CachedImage>

            <StackLayout Margin="0,50,0,0">

                <Entry Text="{Binding NickName}"
                    Margin="40,0,40,0"
                    Placeholder="NickName"              
                    Style="{StaticResource EntryStyle}"/>

                <Entry Text="{Binding Name}"
                    Placeholder="Name"
                    Margin="40,0,40,0"
                    Style="{StaticResource EntryStyle}"/>

                <Editor Placeholder="Description"
                    Text="{Binding Description}"
                    HeightRequest="150"
                    Background="#d4d4d4"
                    Margin="40,60,40,0" />

            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>